<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyProfileFragment"
    android:background="@drawable/backgroundformainpage"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="665dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/profilesectionbutton"
            android:text="Profile Setting"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnshare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/profilesectionbutton"
            android:text="Share Course Academy App"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btntermcondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/profilesectionbutton"
            android:text="Term and Condition"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/profilesectionbutton"
            android:text="Rate Our App"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnfaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/profilesectionbutton"
            android:text="FAQ"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btncontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/profilesectionbutton"
            android:text="Contact Us"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/profilesectionbutton"
            android:text="About Us"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnfeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/profilesectionbutton"
            android:text="Leave Feedback "
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/profilelogoutbtn"
            android:fontFamily="@font/architects_daughter"
            android:padding="20dp"
            android:text="Log out"
            android:textColor="#E30F0F"
            android:textSize="27dp" />

    </LinearLayout>
</FrameLayout>